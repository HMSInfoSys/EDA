<aura:component>
    <aura:registerEvent name="affiliationsModalEvent" type="c:primaryAffiliationsModalEvent" />

    <aura:attribute name="affiliationsAction" type="String" />
    <aura:attribute name="accountRecordType" type="String" />
    <aura:attribute name="contactField" type="String" />

    <aura:if isTrue="{!or(v.affiliationsAction == 'edit', v.affiliationsAction == 'save')}">
        {!$Label.c.stgAffiliationsEditModalBody}
        <lightning:button label="Toggle" onclick="{!c.handleToggle}"></lightning:button>
    </aura:if>
</aura:component>
